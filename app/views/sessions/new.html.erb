<% flash.each do |type, msg| %>
  <div style="color:#ff0000; font-weight:bold">
    <%= msg %>
  </div>
<% end %>
<%= form_tag('/login') do %>
  <%= label_tag 'username' %><br>
  <%= text_field_tag 'username' %><br>
  <%= label_tag 'password' %><br>
  <%= password_field_tag 'password' %><br>
  <br>
  <%= submit_tag "Login" %>
<% end %>
